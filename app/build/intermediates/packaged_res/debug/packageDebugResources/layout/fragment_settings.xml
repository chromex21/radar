<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Availability" />

        <RadioGroup
            android:id="@+id/availability_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/available_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available" />

            <RadioButton
                android:id="@+id/busy_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Busy" />

            <RadioButton
                android:id="@+id/invisible_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invisible" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Discovery Modes" />

        <Switch
            android:id="@+id/ble_discovery_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BLE Discovery" />

        <Switch
            android:id="@+id/wifi_discovery_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wi-Fi Discovery" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Ephemeral ID Rotation" />

        <Spinner
            android:id="@+id/rotation_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Chat Auto-Delete" />

        <Spinner
            android:id="@+id/ttl_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Switch
            android:id="@+id/reveal_consent_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Allow Identity Exchange" />

    </LinearLayout>
</ScrollView>
